<UserControl
    x:Class="MediaReviewUWP.View.LandingPageView.ApplicationInfoUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MediaReviewUWP.View.LandingPageView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary/ButtonDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image
                x:Name="PagerImage"
                Width="400"
                Height="400"
                HorizontalAlignment="Center"
                Stretch="Uniform" />
            <TextBlock
                x:Name="PagerTitle"
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="26"
                FontWeight="SemiBold"
                Text="Add reviews"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="PagerDescription"
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="15"
                Text="Add reviews"
                TextWrapping="Wrap" />

            <controls:PipsPager
                x:Name="MainPipsPager"
                Grid.Row="3"
                HorizontalAlignment="Center"
                NextButtonVisibility="Visible"
                NumberOfPages="3"
                PreviousButtonVisibility="Visible"
                SelectedIndexChanged="MainPipsPager_SelectedIndexChanged" />

            <Button
                x:Name="SignInButton"
                x:Uid="SigninToAccount"
                Grid.Row="4"
                Margin="10,20,10,10"
                HorizontalAlignment="Center"
                Background="DodgerBlue"
                Click="SignInButton_Click"
                Content="Sign in to your Account"
                CornerRadius="5"
                FontSize="15"
                Style="{StaticResource AdaptiveButtonStyle}" />
        </Grid>
    </ScrollViewer>
</UserControl>