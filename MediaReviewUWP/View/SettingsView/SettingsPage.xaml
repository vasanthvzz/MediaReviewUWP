                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Change Theme" />
                    <ListBox
                        x:Name="ThemeChangeListBox"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        ItemContainerStyle="{StaticResource ToggleButtonListBox}"
                        ScrollViewer.HorizontalScrollMode="Auto"
                        ScrollViewer.VerticalScrollMode="Auto"
                        SelectedIndex="0"
                        SelectionChanged="ThemeChangeListBox_SelectionChanged"
                        SelectionMode="Single">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBoxItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Margin="0,0,8,0"
                                    FontFamily="Segoe Fluent Icons"
                                    FontSize="20"
                                    Glyph="&#xE706;" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="Dark" />
                            </Grid>

                        </ListBoxItem>
                        <ListBoxItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Margin="0,0,8,0"
                                    FontFamily="Segoe Fluent Icons"
                                    FontSize="20"
                                    Glyph="&#xEC46;" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="Light" />
                            </Grid>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Page>
