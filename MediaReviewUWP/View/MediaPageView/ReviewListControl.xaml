<UserControl
    x:Class="MediaReviewUWP.View.MediaPageView.ReviewListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MediaReviewUWP.View.MediaPageView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MediaReviewClassLibrary.Models"
    xmlns:viewobjects="using:MediaReviewUWP.ViewObjects"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">


    <ListView
        x:Name="ReviewListView"
        ItemsSource="{x:Bind ReviewList, Mode=OneWay}"
        SelectionMode="None">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="viewobjects:MediaDetailVObj">
                <local:ReviewListItem />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</UserControl>
