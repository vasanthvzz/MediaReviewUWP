<Page
    x:Class="MediaReviewUWP.View.HomePageView.MediaTileGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enitites="using:MediaReviewClassLibrary.Models.Enitites"
    xmlns:local="using:MediaReviewUWP.View.HomePageView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MediaReviewClassLibrary.Models"
    Background="{ThemeResource MildBackground}"
    mc:Ignorable="d">

    <ScrollViewer x:Name="GridScrollViewer" VerticalScrollBarVisibility="Auto">
        <Grid>
            <GridView
                x:Name="MediaGridView"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{ThemeResource StrongBackground}"
                CornerRadius="20"
                IsItemClickEnabled="True"
                ItemClick="MediaGridView_ItemClick"
                ItemsSource="{x:Bind MediaTileList, Mode=OneWay}"
                SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:MediaTileVObj">
                        <local:MediaTile Margin="15" Padding="30" />
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </ScrollViewer>
</Page>
