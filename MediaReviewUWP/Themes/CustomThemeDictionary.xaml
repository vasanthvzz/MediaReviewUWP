<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Windows.UI.Xaml.Media">
    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="Shade1" Color="{Binding DarkShade.Color, Source={StaticResource ThemeSettings}}" />
            <SolidColorBrush x:Key="Shade2" Color="{Binding MainShade.Color, Source={StaticResource ThemeSettings}}" />
            <SolidColorBrush x:Key="Shade3" Color="{Binding LightShade.Color, Source={StaticResource ThemeSettings}}" />
            <SolidColorBrush x:Key="MildBackground" Color="#f5f5f5" />
            <SolidColorBrush x:Key="StrongBackground" Color="White" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="Shade1" Color="{Binding MainShade.Color, Source={StaticResource ThemeSettings}}" />
            <SolidColorBrush x:Key="Shade2" Color="{Binding DarkShade.Color, Source={StaticResource ThemeSettings}}" />
            <SolidColorBrush x:Key="Shade3" Color="{Binding DarkestShade.Color, Source={StaticResource ThemeSettings}}" />
            <SolidColorBrush x:Key="MildBackground" Color="#212121" />
            <SolidColorBrush x:Key="StrongBackground" Color="Black" />
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>